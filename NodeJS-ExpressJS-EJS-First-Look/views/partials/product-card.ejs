<div class="col-md-4">
    <div class="card my-3" >
        <img src="/img/<%=product.image %>" class="card-img-top" alt=<%= product.description %>>
        <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
        </div>
        <div class="card-footer bg-dark text-white d-flex justify-content-between align-items-center">
            <i class="uil uil-lira-sign" style="font-size: 18px;"><%= product.price %></i>
            <button class="btn btn-outline-light btn-sm">Details  <i class="uil uil-arrow-from-right"></i></button>
        </div>
    </div>
</div>